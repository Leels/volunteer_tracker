<h1>Volunteer: <%= @volunteer.name %></h1>
<h3>Project: <%= @volunteer.project.title %></h3>

<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <h4>Rename Volunteer:</h4>
  <input name="name" type="text" class="form-control" placeholder="<%= @volunteer.name %>">
  <br>
  <button type="submit" class="btn">Update Volunteer</button>
</form>
<br>
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn">Delete Volunteer</button>
</form>
<br>
<p><a href="/projects/<%= @volunteer.project.id %>">Back to Project: <%= @volunteer.project.title %></a></p>
